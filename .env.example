# AI Assistant â€” WhatsApp Bot (Meta Cloud API)
# Copy to .env and fill in your values

# Bot config
BOT_NAME=Claude Bot
ENABLE_SESSIONS=true

# Open access: allow anyone to DM the bot
OPEN_ACCESS=true

# Meta Cloud API credentials (from developers.facebook.com)
META_ACCESS_TOKEN=your_system_user_token_here
META_APP_SECRET=your_app_secret_here
META_PHONE_NUMBER_ID=your_phone_number_id_here
META_WEBHOOK_VERIFY_TOKEN=your_random_verify_token_here

# Webhook port (expose via cloudflared: cloudflared tunnel --url http://localhost:3000)
WEBHOOK_PORT=3000

# Claude config
CLAUDE_PATH=/home/ddarji/.local/bin/claude
CLAUDE_MODEL=claude-sonnet-4-6

# Internal HTTP API
HTTP_PORT=5153

# Admin numbers (comma-separated, e.g. "1234567890@c.us")
ADMIN_NUMBERS=

# Docker sandbox (per-user isolation)
SANDBOX_ENABLED=true
SANDBOX_BASE_DIR=/media/ddarji/storage/ai-assistant/sandboxes
SANDBOX_MEMORY=512m
SANDBOX_CPUS=1
SANDBOX_PIDS_LIMIT=256
SANDBOX_WORKSPACE_MAX_MB=500
SANDBOX_IDLE_TIMEOUT_MS=86400000

# Gmail OAuth2 (per-user authentication)
# Create credentials at console.cloud.google.com -> APIs & Services -> Credentials
# Set redirect URI to https://<your-tunnel>/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-tunnel-domain/auth/google/callback

# No whitelisted number or target chat needed in open-access mode
# WHITELISTED_NUMBER=
# TARGET_CHAT=
