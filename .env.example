# Copy to .env and fill in your values

# Bot config
BOT_NAME=Claude Bot
ENABLE_SESSIONS=true

# Open access: allow anyone to DM the bot
OPEN_ACCESS=true

# Meta Cloud API credentials (from developers.facebook.com)
META_ACCESS_TOKEN=your_system_user_token_here
META_APP_SECRET=your_app_secret_here
META_PHONE_NUMBER_ID=your_phone_number_id_here
META_WEBHOOK_VERIFY_TOKEN=your_random_verify_token_here

# Webhook port (expose via cloudflared: cloudflared tunnel --url http://localhost:3000)
WEBHOOK_PORT=3000

# Claude config
CLAUDE_PATH=/home/ddarji/.local/bin/claude
CLAUDE_MODEL=claude-sonnet-4-6

# Internal HTTP API
HTTP_PORT=5153

# Admin numbers (comma-separated, e.g. "1234567890@c.us")
ADMIN_NUMBERS=

# No whitelisted number or target chat needed in open-access mode
# WHITELISTED_NUMBER=
# TARGET_CHAT=
