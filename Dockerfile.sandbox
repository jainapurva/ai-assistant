FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      python3 python3-pip git curl ca-certificates wget unzip && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Non-root user for Claude execution
RUN useradd -m -s /bin/bash -d /home/claude claude

# Pre-create mount points with correct ownership
RUN mkdir -p /home/claude/.claude /workspace && \
    chown -R claude:claude /home/claude/.claude /workspace

USER claude
WORKDIR /workspace

CMD ["sleep", "infinity"]
